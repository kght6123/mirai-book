{
  "name": "mirai-book",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "dev:tc": "npx tailwindcss@latest -i ./src/styles/global.css -o ./public/styles/global.css --watch",
    "start": "astro dev",
    "astro": "astro",
    "preview": "astro preview",
    "preview:vs": "npx @vivliostyle/cli preview --style ./public/styles/global.css",
    "preview:all": "npx concurrently \"npm run build && npm run preview:vs\" \"npm run dev:tc\"",
    "build": "astro check && astro build",
    "build:vs": "npx @vivliostyle/cli build --style ./public/styles/global.css",
    "build:tc": "npx tailwindcss@latest -i ./src/styles/global.css -o ./public/styles/global.css",
    "build:all": "npm run build && npm run build:tc && npm run build:vs"
  },
  "dependencies": {
    "@astrojs/check": "^0.3.1",
    "@astrojs/markdoc": "^0.7.2",
    "@astrojs/node": "^6.0.4",
    "@astrojs/react": "^3.0.6",
    "@types/react": "^18.2.38",
    "@types/react-dom": "^18.2.17",
    "astro": "^3.6.0",
    "playwright-core": "^1.40.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.3.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0"
  }
}
